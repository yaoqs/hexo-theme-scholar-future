<% if (post.comments){ if (config.utterances && config.utterances.enable){ %>
<script
  src="https://utteranc.es/client.js"
  repo="<%- config.utterances.repo %>"
  issue-term="<%- config.utterances.issueterm %>"
  theme="<%- config.utterances.theme %>"
  crossorigin="anonymous"
  async
></script>
<% } else if (config.giscus && config.giscus.enable) { %>
<script
  src="https://giscus.app/client.js"
  data-repo="{{ config.giscus.data - repo }}"
  data-repo-id="{{ config.giscus.data - repo - id }}"
  data-category="{{ config.giscus.data - category }}"
  data-category-id="{{ config.giscus.data - category - id }}"
  data-mapping="{{ config.giscus.data - mapping }}"
  data-strict="0"
  data-reactions-enabled="1"
  data-emit-metadata="0"
  data-input-position="bottom"
  data-theme="light"
  data-lang="zh-CN"
  crossorigin="anonymous"
  async
></script>
<% } } %>
