<div
  style="
    font-size: 12px;
    border-bottom: #bbb 1px solid;
    border-left: #bbb 1px solid;
    background: #f6f6f6;
    min-height: 120px;
    border-top: #bbb 1px solid;
    border-right: #bbb 1px solid;
    margin-top: 30px;
    margin-bottom: 10px;
  "
>
  <div
    style="margin-top: 10px; float: left; margin-left: 10px; margin-right: 10px"
  >
    <img
      alt="author:<%- theme.Author %>"
      src="<%- theme.avatar.url %>"
      width="100"
      height="100"
    />
  </div>
  <div style="line-height: 200%; margin: 10px; color: #000">
    Author:
    <a href="<%- theme.url %>"><%- theme.Author %></a> &nbsp;&nbsp;&nbsp;&nbsp;
    Blog:
    <a href="<%- theme.url %>"><%- theme.url %></a>&nbsp;&nbsp;&nbsp;&nbsp;
    Email:
    <a
      href="mailto:<%- theme.Email %>"
      rel="external nofollow noopener noreferrer"
      target="_blank"
      ><%- theme.Email %></a
    >
    <br />Address:<%- theme.Address %> <br /><%- theme.bio %>
  </div>
</div>
